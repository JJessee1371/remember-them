  <h1>Tell a New Servicemember's Story Here</h1>

{{! Form for submitting a new SEAL with all of the fields sepcified in models }}
  <form class="addnew">
    <div class="grid-container">
      <div class="grid-y grid-padding-y">
        <!-- First -->
        <div class="medium-6 cell">
          <label>First Name
            <input type="text" placeholder="First" id="first">
          </label>
        </div>
        <!-- Last -->
        <div class="medium-6 cell">
          <label>Last Name
            <input type="text" placeholder="Last" id="last">
          </label>
        </div>
        <!-- Age -->
        <div class="medium-6 cell">
          <label>
            How old is this individual?
            <input type="number" value="110" id='age'>
          </label>
        </div>
        {{!-- Branch of service --}}
        <div class="medium-6 cell">
          <label>
            What branch of the military did this individual serve in?
            <input type="text" placeholder="Army/Marine Corps/Navy/Airforce/Coast Guard" id='branch-of-service'>
          </label>
        </div>
        <!-- DOB -->
        <div class="medium-6 cell">
          <label>Date of birth
            <input type="text" placeholder="MM/DD/YYYY" id='dob'>
          </label>
        </div>
        <!-- DOD -->
        <div class="medium-6 cell">
          <label>Date of death
            <input type="text" placeholder="MM/DD/YYYY" id="dod">
          </label>
        </div>
        <!-- Unit -->
        <div class="medium-6 cell">
          <label>Unit
            <input type="text" placeholder="Unit" id="unit">
          </label>
        </div>
        <!-- Awards -->
        <div class="medium-6 cell">
          <label>Awards
            <input type="text" placeholder="Awards" id="awards">
          </label>
        </div>
        <!-- Summary of Service -->
        <div class="medium-6 cell">
          <label>Summary of service
            <input type="text" placeholder="SoS" id="sos">
          </label>
        </div>
      </div>
    </div>
    <a class="button success" href="/api/servicemembers">Submit</a>
  </form>

  <div id="error"><span></span></div>


