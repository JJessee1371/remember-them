<h1 class="txt">Tell a SEALs' story here</h1>

{{! Form for submitting a new SEAL with all of the fields sepcified in models }}
<form>
  <div class="grid-container">
    <div class="grid-y grid-padding-y">
      <!-- First -->
      <div class="cell medium-6">
        <label class="txt">First Name
          <input type="text" placeholder="First">
        </label>
      </div>
      <!-- Last -->
      <div class="cell medium-6">
        <label class="txt">Last Name
          <input type="text" placeholder="Last">
        </label>
      </div>
      <!-- Age -->
      <div class="cell medium-6">
        <label class="txt">
          How old is this individual?
          <input type="number" value="110">
        </label>
      </div>
      <!-- DOB -->
      <div class="cell medium-6">
        <label class="txt">Date of birth
          <input type="text" placeholder="DOB">
        </label>
      </div>
      <!-- DOD -->
      <div class="cell medium-6">
        <label class="txt">Date of death
          <input type="text" placeholder="DOD">
        </label>
      </div>
      <!-- Unit -->
      <div class="cell medium-6">
        <label class="txt">Unit
          <input type="text" placeholder="Unit">
        </label>
      </div>
      <!-- Awards -->
      <div class="cell medium-6">
        <label class="txt">Awards
          <input type="text" placeholder="List awards">
        </label>
      </div>
      <!-- Summary of Service -->
      <div class="cell medium-6">
        <label class="txt">Summary of service
          <input type="text" placeholder="SoS">
        </label>
      </div>
    </div>
  
    <a class="button success" href="/api/servicemembers">Submit</a>
  </div>
</form>


